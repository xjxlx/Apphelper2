<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomNavigationView2">
        <!--item文件-->
        <attr name="navigation_menu" format="reference" />
        <attr name="navigation_itemBackgroundColor" format="color" />
        <attr name="navigation_lineColor" format="color" />

        <!--image的颜色-->
        <attr name="navigation_itemIconTint" format="color" />
        <attr name="navigation_itemIconSize" format="dimension" />

        <!--文本的颜色-->
        <attr name="navigation_itemTextColor" format="color" />
        <attr name="navigation_itemTextSize" format="dimension" />

        <!--padding-->
        <attr name="navigation_paddingTop" format="dimension" />
        <attr name="navigation_interval" format="dimension" />
        <attr name="navigation_paddingBottom" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleView">
        <!--【描边的颜色】-->
        <attr name="stroke_color" format="color" />
        <!--【描边的宽度】：注意，这个值会根据屏幕去自动转换，这里不能使用dimen/xxx类型的数据，否则数据会异常-->
        <attr name="stroke_width" format="dimension" />

        <!--【最外层模糊的颜色】-->
        <attr name="blur_color" format="color" />
        <!--【最外层模糊的宽度】：注意，这个值会根据屏幕去自动转换，这里不能使用dimen/xxx类型的数据，否则数据会异常-->
        <attr name="blur_width" format="dimension" />
    </declare-styleable>

</resources>